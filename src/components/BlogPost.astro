---
export interface Props {
  date: string;
  title: string;
  slug: string;
}

const { date, title, slug } = Astro.props;
---

<div class="blog-post">
  <div class="date">{date}</div>
  <h2><a href={`/blog/${slug}`}>{title}</a></h2>
  <button>+</button>
</div>

<style>
  .blog-post {
    display: flex;
    align-items: center;
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--border-color);
  }
  .date {
    flex: 0 0 100px;
    font-size: 0.8rem;
  }
  h2 {
    flex: 1;
    font-size: 1rem;
    font-weight: normal;
  }
  a {
    color: inherit;
    text-decoration: none;
  }
  button {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
  }
  @media (max-width: 768px) {
    .blog-post {
      flex-wrap: wrap;
    }
    .date {
      flex: 0 0 100%;
      margin-bottom: 0.25rem;
    }
  }
</style>